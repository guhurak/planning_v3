<h2>Modifier <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :first_name, "Prénom" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "prénom" %>
  </div>

  <div class="field">
    <%= f.label :last_name, "Nom" %><br />
    <%= f.text_field :last_name, autocomplete: "nom" %>
  </div>

  <div class="field">
    <%= f.label :email, "Email" %><br />
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div class="field">
    <%= f.label :password, "Mot de passe" %> <i>(Laisser vide si vous ne voulez pas le changer)</i><br />
    <%= f.password_field :password, autocomplete: "nouveau-mot-de-passe" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation, "Confirmer mot de passe" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "nouveau-mot-de-passe" %>
  </div>

  <div class="field">
    <%= f.label :current_password, "Mot de passe actuel" %> <i>(Nous avons besoin de votre mot de passe actuel pour effectuer les changements)</i><br />
    <%= f.password_field :current_password, autocomplete: "mot-de-passe" %>
  </div>

  <div class="actions">
    <%= f.submit "Modifier" %>
  </div>
<% end %>

<h3>Supprimer mon compte</h3>

<p><%= button_to "Supprimer", registration_path(resource_name), data: { confirm: "Êtes vous sûre ?" }, method: :delete %></p>

<%= link_to "Retour", :back %>
